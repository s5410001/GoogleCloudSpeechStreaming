<Window x:Class="GoogleCloudSpeechSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleCloudSpeechSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <Button x:Name="StartRecButton" Content="録音開始" HorizontalAlignment="Left" Margin="200,50,0,0" VerticalAlignment="Top" Width="100" Height="25" Click="StartRecButton_Click"/>
        <Button x:Name="EndRecButton" Content="録音終了" HorizontalAlignment="Left" Margin="200,150,0,0" VerticalAlignment="Top" Width="100" Height="25" Click="EndRecButton_Click"/>
        <TextBlock x:Name="SpeechTextBlock" HorizontalAlignment="Left" Margin="50,230,0,0" TextWrapping="Wrap" Width="400"  VerticalAlignment="Top" Text="テキストブロック初期文章"/>
        <RadioButton x:Name="RadioSample1" Content="RadioButton" HorizontalAlignment="Left" Margin="365,56,0,0" VerticalAlignment="Top" Checked="RadioSample1_Checked"/>
        <RadioButton x:Name="RadioSample2" Content="RadioButton" HorizontalAlignment="Left" Margin="365,155,0,0" VerticalAlignment="Top" Checked="RadioSample2_Checked"/>

    </Grid>
</Window>
